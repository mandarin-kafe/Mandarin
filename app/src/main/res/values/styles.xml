<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToCartButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius_8</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/regular_text_size_16</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="ToCartButtonsBackgroundStyle" parent="ToCartButtonStyle">
        <item name="android:backgroundTint">@color/grey_transparent_10</item>


    </style>

    <style name="RegularTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/regular_text_size_16</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="MealSmallTextStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/small_text_size_11</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="CartButtonSmallTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size_11</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="MealTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>


    <style name="MealPriceStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>


</resources>