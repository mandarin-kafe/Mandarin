<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/button_radius_16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recommend_picture_in_card"
                android:layout_width="@dimen/meal_image_120"
                android:layout_height="@dimen/meal_image_120"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/recommend_nameMeal_in_card"
                style="@style/MealTitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_field_radius_8"
                android:textStyle="bold"
                android:textColor="@color/black"
                tools:text="Рекомендуемый товар" />

            <TextView
                android:id="@+id/weight_recommendMeal_in_card"
                style="@style/MealSmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/supersmall_margin_size_4"
                tools:text="Вес рекомендуемого товара" />

            <Button
                android:id="@+id/price_recommendMeal_in_card"
                style="@style/AddToCartButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/standart_margin_16"
                tools:text="Цена реком товара" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>