<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.mandarinkafe.mandarin.menu.ui.MenuFragment"
        android:label="fragment_menu"

        tools:layout="@layout/fragment_menu"> 
   <action
            android:id="@+id/action_menuFragment_to_mealDetails"
            app:destination="@id/mealDetails"
            app:enterAnim="@anim/slide_in_right"
          />
        <action
            android:id="@+id/action_menuFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
        <action
            android:id="@+id/action_menuFragment_to_deliveryFragment"
            app:destination="@id/deliveryFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.mandarinkafe.mandarin.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />

    
    <fragment
        android:id="@+id/mealDetails"
        android:name="com.mandarinkafe.mandarin.meal_details.ui.MealDetailsFragment"
        android:label="fragment_meal_details"
        tools:layout="@layout/fragment_meal_details" >
        <action
            android:id="@+id/action_mealDetails_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>
    <fragment
        android:id="@+id/deliveryFragment"
        android:name="com.mandarinkafe.mandarin.delivery.DeliveryFragment"
        android:label="fragment_delivery"
        tools:layout="@layout/fragment_delivery" >
        <action
            android:id="@+id/action_deliveryFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

</navigation>